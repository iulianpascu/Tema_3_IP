class PaginaAdministratorController < ApplicationController

	def pagAdmin
		@cursuri = Curs.all
		@specializare =Array.new
		@an = Array.new

		@cursuri.each do |c|
			@specializare << c.specializare
		end
		@specializare = @specializare.uniq
		c=Curs.find_by_specializare("Matematica")
		if c
			@specializare << c.specializare
		end
		c=Curs.find_by_specializare("Matematica aplicata")
		if c
			@specializare << c.specializare
		end
		c=Curs.find_by_specializare("Matematica informatica")
		if c
			@specializare << c.specializare
		end
		c=Curs.find_by_specializare("Informatica")
		if c
			@specializare << c.specializare
		end
		c=Curs.find_by_specializare("CTI")
		if c
			@specializare << c.specializare
		end


		@cursuri.each do |c|
			@an << c.an
		end
		@an = @an.uniq
	end
end
