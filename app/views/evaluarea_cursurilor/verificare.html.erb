<div class="container-narrow">

  <div class="masthead">
    <div id="navbar-example" class="navbar navbar-static">
      <div class="navbar-inner">
        <div class="brand" href="">Grupa <%= session[:user_token][:grupa]%></div>
        
      </div>
    </div>
  </div>



  <div class="well" style="overflow-x:hidden">
    <table class="table table-striped" style="margin-top:15px; float:left; position:absolute">

      <tr>
        <th>Curs</th>
        <th>Profesor</th>
        <th>Tip</th>
        <th>Evalueaza</th>
      </tr>

      <% @curs.each do |c| %>

      <tr>
        <td><%= c[:nume] %></td>
        <td><%= c[:prof] %></td>
        <td><%= c[:tip] %></td>
        <td>
          <% if c[:disabled] %>
            <button class="disabled btn btn-primary" id="<%= c[:id] %>">Evaluat</button>
          <% else %>
            <button class="modalButton btn btn-primary" id="<%= c[:id] %>">Evalueaza!</button>
          <% end %>
        </td>
      </tr>

      <% end %>
    </table>
    <div class="clearfix"></div>
  </div>
</div>


