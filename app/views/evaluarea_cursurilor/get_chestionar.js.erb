
<% if @continuturi %>
  
$(".modal-body").empty();
  
$(".modal-body").append("<%=j render "modal_micut" %>");
  
$('#modal').modal('show');

// codul urmator e pt radio buttons
$('div.btn-group[data-toggle-name=*]').each(function(){
    var group   = $(this);
    var form    = group.parents('form').eq(0);
    var name    = group.attr('data-toggle-name');
    var hidden  = $('input[name="' + name + '"]', form);
    $('button', group).each(function(){
      var button = $(this);
      button.live('click', function(){
          hidden.val($(this).val());
      });
      if(button.val() == hidden.val()) {
        button.addClass('active');
      }
    });
  });

<% else %>
  $("#error-div").empty();
  $("#error-div").append('<div class="alert alert-error"><%= flash[:error] %></div>');

<% end %>