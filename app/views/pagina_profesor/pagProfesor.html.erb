<!doctype html>
<html lang="en">

<body>

    <div class="container-narrow">

    <div class="masthead">
        <div id="navbar-example" class="navbar navbar-static">
            <div class="navbar-inner">
              <a class="brand" href="">Profesor</a>
              <div class="container" style="width: auto;">
                <ul class="nav" role="navigation">
                    <li class="dropdown">
                    <a href="#" id="drop2" role="button" class="dropdown-toggle" data-toggle="dropdown">Specializare<b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
										<% @specializare.each do |s| %>
                      <li role="presentation" ><a role="menuitem" tabindex="-1" href="#" style="text-align: left;"><%= s %></a></li>
                     <% end %>
                    </ul>
                  </li>
                     <li class="dropdown">
                    <a href="#" id="drop2" role="button" class="dropdown-toggle" data-toggle="dropdown">An<b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
										<% @an.each do |a| %>
                      <li role="presentation" ><a role="menuitem" tabindex="-1" href="#" style="text-align: left;"><%= a %></a></li>
                     <% end %>
                    </ul>
                  </li>
                  <li class="dropdown">
                    <a href="#" id="drop2" role="button" class="dropdown-toggle" data-toggle="dropdown">Curs<b class="caret"></b></a>
                     <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
										<% @cursuri.each do |c| %>
                      <li role="presentation" ><a role="menuitem" tabindex="-1" href="#" style="text-align: left;"><%= c.nume %></a></li>
                      <% end %>
                    </ul>
                  </li>

                </ul>

              </div>
            </div>
          </div>
    </div>

    <div class="well">
	   <table class="table table-striped" style="margin-top:15px; float:left; position: absolute">
      <tr>
        <th>An</th>
        <th>Curs</th>
        <th>Arata statistici</th>
        <th>Descarca PDF</th>
      </tr>

      <% i=0%>

      <% @cursuri.each do |curs| %>
        <tr>
		      <td><%= curs.an %></td>
		      <td><%= curs.nume %></td>
		      <td><input type="button" class="btn btn-success modalButton"
		      id="<%= i+=1 %>" value="Detalii"/></td>
		      <td><input type="button" class="btn btn-primary" value="Descarca"/></td>
			</tr>

      <% end %>

    </table>
        <div class="clearfix"></div>
    </div>

	</div>


	<script src="../bootstrap/js/jquery.min.js" type="text/javascript"></script>
	<script src="../bootstrap/js/bootstrap.js" type="text/javascript"></script>
	<script src="../bootstrap/js/jasny-bootstrap.js" type="text/javascript"></script>
	<script src="../bootstrap/js/bwizard.js" type="text/javascript"></script>

</body>
</html>
