<!DOCTYPE html>
<html>
<head>
  <title>GossipLogin</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, msg| %>
  <div id="<%= key %>">
    <p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
<% end %>

<div class="nav">
  <p>
      <% if token_logged %>
        <%= "Anonimule" %>
        <%= link_to "iesiii", '/sign_out' %>
      <% else %>
        <%= link_to "login", sign_in_path %>
      <% end %>
  </p>
</div>

<%= yield %>

</body>
</html>
